<form role="form" id="usersFormId">
    <input type="hidden" id="Id" name="Id" />
    <input type="hidden" id="OldRoles[]" name="OldRoles[]" />
    <input type="hidden" id="OldCias[]" name="OldCias[]" />

    <div class="col-md-12">
        <fieldset class="fieldset-filters">
            <legend class="fieldset-label">Informaci&oacute;n personal</legend>

            <div class="row">
                <div class="form-group col-md-6">
                    <label class="form-label" for="FirstName">Nombres</label>
                    <input type="text" class="form-control" id="FirstName" name="FirstName"/>
                </div>

                <div class="form-group col-md-6">
                    <label class="form-label" for="LastName">Apellidos</label>
                    <input type="text" class="form-control" id="LastName" name="LastName"/>
                </div>
            </div>
        </fieldset>

        <fieldset class="fieldset-filters">
            <legend class="fieldset-label">Informaci&oacute;n de inicio de seci&oacute;n</legend>

            <div class="row">
                <div class="form-group col-md-6">
                    <label class="form-label" for="UserName">Nombre de usuario</label>
                    <input type="text" class="form-control" id="UserName" name="UserName"/>
                </div>

                <div class="form-group col-md-6">
                    <label class="form-label" for="Email">Correo</label>
                    <input type="email" class="form-control" id="Email" name="Email"/>
                </div>
            </div>

            <div class="form-check">
                @* <input type="checkbox" class="form-check-input" value="true" id="changePassword"> *@
                <input type="checkbox" class="form-check-input" id="changePassword">
                <label class="form-check-label" for="changePassword">Cambiar contrase&ntilde;a</label>
            </div>

            <div class="row mt-2">
                <div class="form-group col-md-6">
                    <label class="form-label" for="Password">Contrase&ntilde;a</label>
                    <input type="password" class="form-control" id="Password" name="Password" autocomplete="off" disabled="disabled"/>
                </div>

                <div class="form-group col-md-6">
                    <label class="form-label" for="RepeatPassword">Repita la contrase&ntilde;a</label>
                    <input type="password" class="form-control" id="RepeatPassword" name="RepeatPassword" autocomplete="off" disabled="disabled"/>
                </div>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="true" id="Active" name="Active" checked disabled="disabled"/>
                <label class="form-check-label" for="Active">Activo</label>
            </div>
        </fieldset>

        <fieldset class="fieldset-filters">
            <legend class="fieldset-label">Acceso empresarial</legend>

            <div class="row">
                <div class="form-group col-md-12">
                    <label class="form-label" for="SelRoles">Roles del usuario (para la empresa actual)</label>
                    <input type="hidden" class="form-control" id="SelRoles" name="SelRoles" autocomplete="off">
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-12">
                    <label class="form-label" for="SelRoles">Empresas del usuario</label>
                    <input type="hidden" class="form-control" id="SelCias" name="SelCias" autocomplete="off">
                </div>
            </div>
        </fieldset>

        <div class="row">
            <div class="col-12" style="margin-top:20px;">
                <button class="btn btn-primary btn-md float-right" id="usersFormAddButtonId" type="submit">
                    <i class="fa fa-floppy-o"></i>&nbsp;
                    <span id="usersFormAddButtonTextId">Guardar</span>
                </button>
            </div>
        </div>
    </div>
</form>