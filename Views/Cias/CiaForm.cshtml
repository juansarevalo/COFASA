<form role="form" id="ciasForm" style="margin-left:15px; margin-right:15px;">
    <div class="col-md-12">
        <fieldset class="fieldset-filters">
            <legend class="fieldset-label">Información general</legend>

            <div class="row">
                <input type="hidden" class="form-control" placeholder="" id="IS_EDITING" name="IS_EDITING" />
                <input type="hidden" class="form-control" placeholder="" id="IS_COPYING" name="IS_COPYING"/>

                <div class="form-group col-md-4" id="companiaSelect">
                    <label class="form-label" for="COD_CIA">Compañia:</label> @* Viene de: CIAS *@
                    <input type="hidden" class="form-control" id="COD_CIA" name="COD_CIA" />
                </div>

                <div class="col-12"></div>
                
                <div class="form-group col-md-6">
                    <label>Razón social</label>
                    <input type="text" class="form-control" placeholder="" id="RAZON_SOCIAL" name="RAZON_SOCIAL"/>
                </div>

                <div class="form-group col-md-6">
                    <label>Nombre comercial</label>
                    <input type="text" class="form-control" placeholder="" id="NOM_COMERCIAL" name="NOM_COMERCIAL">
                </div>

                <div class="form-group col-md-6">
                    <label>NRC</label>
                    <input type="text" class="form-control" placeholder="" id="NRC" name="NRC">
                </div>
            </div>
        </fieldset>

        <div class="row">
            <div class="col-12" style="margin-top:20px;">
                <button class="btn btn-primary btn-md float-right" id="btnSaveCia" type="submit">
                    <i class="fa fa-floppy-o"></i>&nbsp;
                    <span id="btnSaveCiaText">Guardar</span>
                </button>
            </div>
        </div>
    </div>
</form>