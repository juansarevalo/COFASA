@using CoreContable.Services
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject ISecurityRepository SecurityRepository

<form role="form" id="rolesFormId" style="margin-left:15px; margin-right:15px;">
    <input type="hidden" id="CodCiaFromForm" name="CodCia"/>
    <input type="hidden" id="Id" name="Id"/>
    <input type="hidden" id="idsPermissions" name="idsPermissions" value=""/>

    <div class="col-md-12">
        <div class="row">
            <div class="form-group col-md-12">
                <label class="form-label" for="Name">Nombre</label>
                <input type="text" class="form-control" id="Name" name="Name"/>
            </div>
        </div>

        <div class="form-check mt-2">
            <input class="form-check-input" type="checkbox" value="true" id="Active" name="Active"/>
            <label class="form-check-label" for="Active">
                Activo
            </label>
        </div>
        
        <hr/>

        <div class="row  mt-3">
            <div class="form-group col-md-12">
                <label class="form-label">Permisos para este rol:</label>

                <div id="permissionsJsTree"></div>
            </div>
    
            <div id="lblLoading" class="col-md-12" style="text-align:center;">
                <i class="fa fa-spinner fa-spin"></i>
            </div>
        </div>

        <div class="row">
                <div class="col-12" style="margin-top:20px;">
                    <button class="btn btn-primary btn-md float-right" id="rolesFormAddButtonId" type="submit">
                        <i class="fa fa-floppy-o"></i>&nbsp;
                        <span id="rolesFormAddButtonTextId">Guardar</span>
                    </button>
                </div>
            </div>
    </div>
</form>