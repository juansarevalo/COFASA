@using CoreContable.Services
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject ISecurityRepository SecurityRepository

<form role="form" id="copyCcForm" style="margin-left:15px; margin-right:15px;">
    <div class="row">
        <div class="form-group col-5">
            <label for="centroCosto">Centro costo original</label>
            <input type="hidden" class="form-control" id="centroCosto" name="centroCosto" />
        </div>

        <div class="col d-flex justify-content-md-center align-items-center">
            @* <i class="fa fa-long-arrow-right" aria-hidden="true"></i> *@
            <h2>‚ü∂</h2>
        </div>

        <div class="form-group col-5">
            <label for="centroCosto2">Centro costo de destino</label>
            <input type="hidden" class="form-control" id="centroCosto2" name="centroCosto2" />
        </div>
    </div>

    @if (SecurityRepository.HasPermission(CC.THIRD_LEVEL_PERMISSION_CENTROCOSTO_CAN_COPY))
    {
        <div class="row">
            <div class="col-12">
                <button class="btn btn-primary float-right" id="copyCcButton" type="submit">
                    <i class="fa fa-files-o"></i>&nbsp;<span id="copyCcButtonText">Copiar</span>
                </button>
            </div>
        </div>
    }
</form>