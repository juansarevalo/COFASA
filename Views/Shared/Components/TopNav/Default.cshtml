@model IEnumerable<SelectListItem>
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using CoreContable.Services
@inject ISecurityRepository SecurityRepository

<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>
    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
        <!-- Companies Dropdown Menu -->
        <li class="nav-item dropdown">
            <form asp-action="ChangeCia" asp-controller="Home">
                <select id="selCias" class="form-control" asp-items="Model"></select>
            </form>
        </li>

        <!-- Notifications Dropdown Menu -->
        <li class="nav-item dropdown">
            <a class="nav-link" data-toggle="dropdown" href="#">
                <i class="far fa-user"></i> @SecurityRepository.GetSessionFullName()
            </a>
            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                <span class="dropdown-header">Acciones</span>
                <div class="dropdown-divider"></div>
               @*  <a href="#" id="editMyUser" class="dropdown-item">
                    <i class="fas fa-user-edit mr-2"></i> Administrar perfil
                </a> *@
                <input type="hidden" id="myProfileId" name="myProfileId" value="@SecurityRepository.GetSessionUserId()" />
                <div class="dropdown-divider"></div>
                <a href="@Url.Action("LogOut", "Security")" class="dropdown-item">
                    <i class="fas fa-sign-out-alt mr-2"></i> Cerrar sesión
                </a>
            </div>
        </li>
    </ul>
</nav>

<textarea id="editMyUserFormHtmlId" style="display:none;"><partial name="Components/TopNav/MyUserForm" /></textarea>
