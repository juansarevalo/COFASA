{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/CONTABLE-log-.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Information",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "corecontable"
    }
  },
  "AccountFormatting": {
    "ShowEmptyLevels1": true,
    "ShowEmptyLevels2": false,
    "ShowEmptyLevels3": false,
    "ShowEmptyLevels4": false,
    "ShowEmptyLevels5": false,
    "ShowEmptyLevels6": false,
    "EmptyLevel1": "false",
    "EmptyLevel2": "#==0",
    "EmptyLevel3": "#==0",
    "EmptyLevel4": "#==0",
    "EmptyLevel5": "#==0",
    "EmptyLevel6": "#==0",
    "Separator": " ",
    "Level1": 0,
    "Level2": 2,
    "Level3": 2,
    "Level4": 2,
    "Level5": 2,
    "Level6": 3
  }
}
